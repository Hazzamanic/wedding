@page "/confirmation"
@model ConfirmationModel

@using Microsoft.AspNetCore.Identity
@using WeddingWebsite.Data.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    Layout = "_RegisterLayout";

    ViewData["Title"] = "Confirmation";
}

<div style="width: 100%;">
    <div class="section-bg-img"></div>
    <div class="container">
        <div class="text-center p-4">
            <div class="name">RSVP</div>
        </div>
    </div>
</div>

<div class="section-red section-bottom-border section-top-border">
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-7 mx-auto">
                <p class="text-center mb-5">
                    Thank you for responding! <br />
                    If you have requested on-site accommodation we will get in touch very soon!
                </p>
                <partial name="_GuestConfirmation" model="Model.Input.Guest1" />
                <p class="text-center fw-bold">~~~</p>
                <partial name="_GuestConfirmation" model="Model.Input.Guest2" />
                <p class="text-center fw-bold">~~~</p>
                <div class="row">
                    <div class="col-md-8 col-lg-9">
                        <p>Anything else you'd like to know</p>
                    </div>
                    <div class="col-md-4 col-lg-3">
                        @Model.Input.MoreInfo
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <a asp-page="Register" asp-route-update="true" class="btn btn-warning" style="background-color:darkorange">
                        Edit RSVP
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
