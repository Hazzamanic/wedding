@page "/accommodation"
@model AccommodationModel

@using Microsoft.AspNetCore.Identity
@using WeddingWebsite.Constants
@using WeddingWebsite.Data.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    Layout = "_RegisterLayout";
    ViewData["Title"] = "Register";

    var partyType = Model.CurrentUser.PartyType;
    var partialName =
        partyType == PartyTypeConstants.Bridal ? "_Apartments" :
        partyType == PartyTypeConstants.Knight ? "_VillaToo" :
        partyType == PartyTypeConstants.Westbrook ? "_VillaTres" :
        "_VillaCinco";
}

<div style="width: 100%;">
    <div class="section-bg-img"></div>
    <div class="container">
        <div class="text-center p-4">
            <div class="name">Accommodation</div>
        </div>
    </div>
</div>

<div class="section-red section-bottom-border section-bottom-border">
    <div class="container">
        <div class="pt-4">
            <partial name="@partialName" />
        </div>        
    </div>
</div>

<div class="w-100 section-red">
    <partial name="_Map" />
</div>