@page "/gifts"
@model WeddingWebsite.Pages.GiftsModel
@{

}

<div class="container">
    <div>
    </div>
    <div class="row">
        @foreach (var gift in Model.Gifts)
        {
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="@gift.ImageUrl" class="card-img-top" alt="@gift.Title">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0">@gift.Title</h5>
                        @*<div class="card-text text-black-50">Web Developer</div>*@
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- image: https://source.unsplash.com/TMgQMXoglsM/500x350 -->

</div>
