@page "/"
@model HomeModel

@using Microsoft.AspNetCore.Identity
@using WeddingWebsite.Data.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    Layout = "_RegisterLayout";

    ViewData["Title"] = "Register";
}

<div style="min-height: 600px; width: 100%;">
    <div class="section-bg-img"></div>
    <div class="container">
        <div class="row row-flex">
            <div class="col-md-4 col-sm-6 d-flex align-items-center justify-content-center text-center pb-4">
                <div>
                    <div class="">
                        <div class="name">Harry</div>
                        <div class="name text-center" style="font-size: 2.5em">&</div>
                        <div class="name">Sinead</div>
                    </div>
                    <div class="sub-header">Are getting married!</div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="polaroid polaroid-r-r polaroid-d img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/engaged-fix.jpg" />
                    </div>
                    <div class="polaroid-text">
                        Just Engaged!
                    </div>
                </div>
                <div class="polaroid polaroid-r-l polaroid-d img-center" style="max-width: 250px; margin-top:20px; transform: rotate(-10deg)">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/butt_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-none d-md-block" style="margin-top: 50px">
                <div class="polaroid polaroid-r-l img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/laugh_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
                <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/topofcanada_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-purple section-bottom-border">
    <div class="container ">
        <div class="row">
            <div class="col-md-7 mx-auto">
                <div class="m-5">
                    <div class="text-center fw-bold">
                        <div class="sub-header mb-3">Dear&nbsp; @Model.Name</div>
                        <p>We would love to invite you to our wedding on Saturday 7th October 2023.</p>

                        <p>We will be celebrating from late afternoon on Friday 6th and bidding our farewells on the morning of Tuesday 10th, at Casa Monte Cristo villas in the Algarve.</p>
                        
                        <p>You are welcome to join us for as much of it as you wish.</p>

                        <p>We have listed details of our plans below, please let us know in your RSVP which bits you hope to attend.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-pizza section-bottom-border" id="home-pizza">
    <div class="container p-5">
        <div class="row">
            <div class="col-md-7">
                <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                    Pizza Party!
                </h3>
                <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                    Friday 6th October 2023 <br />
                    6-9pm TBC
                </div>
                <div class="text-center fw-bold mx-auto" style="max-width: 400px;">
                    <p>~~~</p>
                    Join us for a fun evening of welcome drinks, pizzas and laughter as we all prepare for the big day!
                </div>
            </div>
            <div class="col-md-5">
                <partial name="_PizzaParty" />

            </div>
        </div>
        <div class="row">
            <div class="col-md-7 mx-auto">
                <div class="row align-items-center">
                    <div class="col-md">
                        <div class="sub-header text-center" style="padding-bottom: 30px">
                            Hosted By <br />
                            Jack & Aideen
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                            <div class="polaroid-img">
                                <div class="gloss"></div>
                                <img src="/img/jackaideen1.jfif" />
                            </div>
                            <div class="polaroid-text">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-red section-bottom-border" id="home-wedding">
    <div class="container p-5">
        <div class="row align-items-center">
            <div class="col-md-5">
                <partial name="_WeddingDay" />
            </div>
            <div class="col-md-7">
                <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                    Wedding Day!
                </h3>
                <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                    Saturday 7th October
                </div>
                <div class="text-center fw-bold">
                    <p>~~~</p>
                    <p>Breakfast will be served at the villas in the morning (if you are staying on-site), with plenty of time for a dip in the hot tub, splash in the pool, drink from the bar and some lunch.</p>
                    <p>
                        The full order of the day will follow but the proceedings are likely to start at around 2:30pm until late,
                        with plenty of <a asp-page="/faq" asp-fragment="food" target="_blank" style="color: white">food & drink</a> throughout the day!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section section-blue section-bottom-border" id="home-brunch">
    <partial name="_PoolParty" />
    <div class="container pb-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div style="margin-right: 10px">
                    <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                        Brunch!
                    </h3>
                    <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                        Sunday 8th October 2023 <br />
                        11am - 1pm TBC
                    </div>
                    <div class="text-center fw-bold">
                        <p>~~~</p>
                        Join us for a tasty brunch, hair of the dog and a serious debrief <br /> about the day/night before.
                        @*<br /> Included: Waffle brunch, punch and bloody marys.*@
                    </div>
                </div>
            </div>
            <div class="col-md-6 mx-auto">
                <div style="margin-left: 10px">
                    <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                        Pool Party!
                    </h3>
                    <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                        Sunday 8th October 2023 <br />
                        Afternoon onwards
                    </div>
                    <div class="text-center fw-bold">
                        <p>~~~</p>
                        Following brunch, we'll have a pool party and afternoon of fun for those who want to join in or spectate with drinks and games. <br />
                        Early evening BBQ TBC
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-7 mx-auto">
                <div class="row align-items-center">
                    <div class="col-md">
                        <div class="sub-header text-center" style="padding-bottom: 30px">
                            Brunch hosted By <br />
                            Tony & Sue
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                            <div class="polaroid-img">
                                <div class="gloss"></div>
                                <img src="/img/tonysue1.jfif" />
                            </div>
                            <div class="polaroid-text">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section section-green section-bottom-border" id="home-freeday">
    <div class="container p-5">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                    Free Day!
                </h3>
                <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                    Monday 9th October
                </div>
                <div class="text-center fw-bold">
                    <p>~~~</p>
                    <p>
                        This day is a day for you! </p>

                    <p>
                        Lagos has plenty of bars and restaurants to explore. There are some gorgeous beaches, surfing and stunning walks along the cliffs.
                        You can rent kayaks and explore the caves. Or chilling out at the pool (or in bed) recovering is a good option.
                    </p>

                    <p>In the evening we will likely meet up for some drinks in Lagos but no concrete plans as yet!</p>

                </div>
            </div>
            <div class="col-md-5">
                <div class="polaroid polaroid-r-r polaroid-d img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/lagos_beach.jpg" />
                    </div>
                    <div class="polaroid-text">
                        Lagos Beach
                    </div>
                </div>
                <div class="polaroid polaroid-r-l polaroid-d img-center" style="max-width: 250px; margin-top:20px; transform: rotate(-10deg)">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/caves.png" />
                    </div>
                    <div class="polaroid-text">
                        Benagil Cave
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="section-purple section-bottom-border">
    <div class="container ">
        <div class="row">
            <div class="col-md-7 mx-auto m-5">
                <div class="face-container d-flex justify-content-center align-items-center">
                    <div class="sad-face"></div>
                </div>
                <div class="">
                    <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                        Departure
                    </h3>
                    <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                        Tuesday 10th October
                    </div>
                    <div class="text-center fw-bold">
                        Sadly the time will come to depart. Checkout is 10am, so there'll be a chance for a final dip in the pool and a last game of table tennis.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="section-blue section-bottom-border">
    <div class="container ">
        <div class="row">
            <div class="col-md-7 mx-auto m-5">
                <div class="">
                    <a asp-page="/Register" class="sub-header text-center btn-rsvp" style="font-size: 3em">
                        RSVP
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

