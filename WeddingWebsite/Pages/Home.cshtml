@page "/"
@model HomeModel

@using Microsoft.AspNetCore.Identity
@using WeddingWebsite.Data.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    Layout = "_RegisterLayout";

    ViewData["Title"] = "Register";
}

<div style="min-height: 600px; width: 100%;">
    <div class="section-bg-img"></div>
    <div class="container">
        <div class="row row-flex">
            <div class="col-md-4 col-sm-6 d-flex align-items-center justify-content-center text-center pb-4">
                <div>
                    <div class="">
                        <div class="name">Harry</div>
                        <div class="name text-center" style="font-size: 2.5em">&</div>
                        <div class="name">Sinead</div>
                    </div>
                    <div class="sub-header">Are getting married!</div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="polaroid polaroid-r-r polaroid-d img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/engaged-fix.jpg" />
                    </div>
                    <div class="polaroid-text">
                        Just Engaged!
                    </div>
                </div>
                <div class="polaroid polaroid-r-l polaroid-d img-center" style="max-width: 250px; margin-top:20px; transform: rotate(-10deg)">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/butt_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-none d-md-block" style="margin-top: 50px">
                <div class="polaroid polaroid-r-l img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/laugh_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
                <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/topofcanada_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-purple section-bottom-border">
    <div class="container ">
        <div class="row">
            <div class="col-md-7 mx-auto">
                <div class="m-5">
                    <div class="text-center fw-bold">
                        <p>Dear @Model.Name, we would love to invite you to our wedding.</p>
                        <p>One day is simply not enough time for all the fun that we have planned!</p>
                        <p>We will be celebrating from late afternoon on Friday 6th and bidding our farewells on the morning of Tuesday 10th, at Casa Monte Cristo villas in the Algarve.</p>
                        <p>You are welcome to join us for as much of it as you wish. We have listed details of our plans below, please let us know in your RSVP which bits you hope to attend.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-pizza section-bottom-border" id="home-pizza">
    <div class="container p-5">
        <div class="row">
            <div class="col-md-7">
                <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                    Pizza Party!
                </h3>
                <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                    Friday 6th October 2023 <br />
                    6-9pm TBC
                </div>
                <div class="text-center fw-bold">
                    <p>~~~</p>
                    Join us for a fun evening of pizzas, drinks and laughter by the pool as we all prepare for the big day!
                </div>
            </div>
            <div class="col-md-5">
                <partial name="_PizzaParty" />

            </div>
        </div>
        <div class="row">
            <div class="col-md-7 mx-auto">
                <div class="row align-items-center">
                    <div class="col-md">
                        <div class="sub-header text-center" style="padding-bottom: 30px">
                            Hosted By <br />
                            Jack & Aideen
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                            <div class="polaroid-img">
                                <div class="gloss"></div>
                                <img src="/img/jackaideen1.jfif" />
                            </div>
                            <div class="polaroid-text">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-red section-bottom-border" id="home-wedding">
    <div class="container p-5">
        <div class="row align-items-center">
            <div class="col-md-5">
                <partial name="_WeddingDay" />
            </div>
            <div class="col-md-7">
                <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
                    Wedding Day!
                </h3>
                <div class="sub-header text-center" style="padding-top: 30px; padding-bottom: 10px; font-size: 1em">
                    Saturday 7th October
                </div>
                <div class="text-center fw-bold">
                    <p>~~~</p>
                    <p>Breakfast will be served at the villas at 9am, with plenty of time for a dip in the hot tub, splash in the pool, drink from the bar and some lunch (we'll provide a cold selection of food at the villas for self service)</p>
                    <p>
                        Ceremony likely to start around 2.30pm. Full order of the day to follow but music will finish at 11pm and the party can continue around the pool area for those who wish to continue!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

