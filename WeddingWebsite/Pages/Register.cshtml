@page "/register"
@model RegisterModel

@using Microsoft.AspNetCore.Identity
@using WeddingWebsite.Data.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    Layout = "_FullWidthLayout";

    ViewData["Title"] = "Register";
}

<div class="section-orange ">
    <div class="container text-center">
        <div class="header top-banner-header" style="padding: 10px 0px;">
            Dear @Model.Name
        </div>
        <div style="padding-bottom: 20px;font-weight:bold;font-style:italic;">
            We really hope you're free in October next year because...
        </div>
    </div>
</div>

<div style="min-height: 600px; width: 100%;">
    <div class="section-bg-img"></div>
    <div class="container">
        <div class="row row-flex">
            <div class="col-md-4 col-sm-6 d-flex align-items-center justify-content-center text-center pb-4">
                <div>
                    <div class="">
                        <div class="name">Harry</div>
                        <div class="name text-center" style="font-size: 2.5em">&</div>
                        <div class="name">Sinead</div>
                    </div>
                    <div class="sub-header">Are getting married!</div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="polaroid polaroid-r-r polaroid-d img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/engaged-fix.jpg" />
                    </div>
                    <div class="polaroid-text">
                        Just Engaged!
                    </div>
                </div>
                <div class="polaroid polaroid-r-l polaroid-d img-center" style="max-width: 250px; margin-top:20px; transform: rotate(-10deg)">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/butt_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-none d-md-block" style="margin-top: 50px">
                <div class="polaroid polaroid-r-l img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/laugh_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
                <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/topofcanada_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section section-purple section-bottom-border">
    <div class="container">
        <h3 class="header text-center" style="font-size: 5em; padding-top: 30px;">
            Save the date!
        </h3>
        <div class="sub-header text-center" style="padding: 30px 0;">
            Saturday 7th October 2023 <br />in<br /> Lagos, Portugal
        </div>


        <div class="row">
            <div class="col-md-7 mx-auto">

                <div class="">
                    <div class="text-center fw-bold">
                        <p>One day is simply not enough time for all the fun that we have planned!</p>
                        <p>We will be celebrating from late afternoon on Friday 6th and bidding our farewells after breakfast on the morning of Tuesday 10th, at a collection of villas in the Algarve.</p>
                        <p>You are welcome to join us for as much of it as you wish.</p>
                        <div class="mx-auto col-md-10 mx-auto mb-4" style="text-align: left">
                        <p class="text-decoration-underline">Rough itinerary:</p>
                            <table class="table-borderless text-left w-100">
                                <tr>
                                    <td width="30%">Friday 6<sup>th</sup></td>
                                    <td style="font-weight: 500">Welcome party</td>
                                </tr>
                                <tr>
                                    <td>Saturday 7<sup>th</sup></td>
                                    <td style="font-weight: 500">Wedding day</td>
                                </tr>
                                <tr>
                                    <td>Sunday 8<sup>th</sup></td>
                                    <td style="font-weight: 500">Brunch and pool party</td>
                                </tr>
                                <tr>
                                    <td>Monday 9<sup>th</sup></td>
                                    <td style="font-weight: 500">Day for yourself to relax, swim, surf, wine taste or explore</td>
                                </tr>
                                <tr>
                                    <td>Tuesday 10<sup>th</sup></td>
                                    <td style="font-weight: 500">So long, farewell!</td>
                                </tr>
                            </table>
                        </div>
                        <p>More exciting details to follow!</p>
                        <p>~~~</p>
                        <p class="">
                            There are various accommodation options available which we will share in due course. For now, to help us gauge initial interest, please let us know if you are interested in staying for the full 4 nights on site.
                        </p>
                        <p></p>
                        <p>This is 100% non-committal at the moment, but will help us with our planning. </p>
                        <p>
                            Other options if 4 nights is too long, you would prefer more privacy or just prefer to organise things yourself will include smaller villas on the same road, hotels in town a 10 minute taxi away and Airbnbs.
                        </p>

                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6 mx-auto">
                            @if (Model.CanSubmit)
                            {
                                <form method="post">
                                    
                                    <div class="mb-3">
                                        <input class="btn btn-warning" style="background-color:darkorange" type="submit" value="Submit" />
                                    </div>
                                    <p class="text-center fw-bold">~~~</p>
                                </form>
                            }
                            else
                            {
                                <p class="text-center fw-bold">~~~</p>
                                <p class="text-center fw-bold">Click <a asp-page="SaveTheDate" asp-route-update="true">here</a> to update your response.</p>
                                <p class="text-center fw-bold">Thank you for letting us know!</p>
                                <p class="text-center fw-bold">~~~</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-auto" style="margin-top: 60px">
            <div class="polaroid polaroid-r-r img-center" style="max-width: 400px">
                <div class="polaroid-img">
                    <video src="/video/sinead_pool.mp4" preload="auto" controls style="width: 100%; height: auto">
                    </video>
                </div>
                <div class="polaroid-text">
                    Come to the wedding...?
                </div>
            </div>
            <div class="d-sm-none mt-5">
                <div class="polaroid polaroid-r-l img-center" style="max-width: 250px">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/laugh_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
                <div class="polaroid polaroid-r-r img-center" style="max-width: 250px;">
                    <div class="polaroid-img">
                        <div class="gloss"></div>
                        <img src="/img/topofcanada_whatsapp.jfif" />
                    </div>
                    <div class="polaroid-text">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

