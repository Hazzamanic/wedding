@page
@using WeddingWebsite.Constants
@model EditUserModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<div class="admin-email-buttons">
    <div>
        <form action="/Email/SendInvite?ids=@Model.Input.Id" method="post">
            <button id="" type="submit" class="btn btn-primary">Send Invite</button>
        </form>
        <form action="/Email/SendInvite?ids=@Model.Input.Id&isTest=true" method="post">
            <button id="" type="submit" class="btn  btn-primary">Send Test Invite</button>
        </form>
        <form action="/Email/SendAccommodationConfirmation?ids=@Model.Input.Id" method="post">
            <button id="" type="submit" class="btn btn-primary">Send Accommodation Confirmation</button>
        </form>
        <form action="/Email/SendAccommodationConfirmation?ids=@Model.Input.Id&isTest=true" method="post">
            <button id="" type="submit" class="btn btn-primary">Send Test Accommodation Confirmation</button>
        </form>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form id="registerForm" method="post">
            <input type="hidden" asp-for="Input.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.GuestName" class="form-control" aria-required="true" />
                <label asp-for="Input.GuestName"></label>
                <span asp-validation-for="Input.GuestName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.GuestEmail" class="form-control" aria-required="true" />
                <label asp-for="Input.GuestEmail"></label>
                <span asp-validation-for="Input.GuestEmail" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.GroupName" class="form-control" aria-required="true" />
                <label asp-for="Input.GroupName"></label>
                <span asp-validation-for="Input.GroupName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.RoomMate" class="form-control" aria-required="true" />
                <label asp-for="Input.RoomMate"></label>
                <span asp-validation-for="Input.RoomMate" class="text-danger"></span>
            </div>
            <select class="form-select" asp-for="Input.PartyType">
                <option value="">General</option>
                <option value="@PartyTypeConstants.Bridal">Bridal</option>
                <option value="@PartyTypeConstants.Westbrook">Westbrook</option>
                <option value="@PartyTypeConstants.Knight">Knight</option>
            </select>
            <div class="mt-3">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
        </form>
        <hr />
        User link: @($"https://www.harrygetsknighted.com/dr?code={Uri.UnescapeDataString(Model.DirectLoginCode)}")
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
